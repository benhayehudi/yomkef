<h2 id="page-title">Update Your Listing</h2>

<div class="input-group input-group-lg">
  <form action="/listing-update/<%= @listing.id %>" method="POST">

  <div class="form-group form-group-lg">
    <label name="name"><input type="text" class="form-control input-lg" value="<%= @listing.name %>" name="name" aria-describedby="sizing-addon1"></label><br>
  </div>

  <div class="form-group">
    <label name="location"><input type="text" class="form-control input-lg" value="<%= @listing.location %>" name="location"></label><br>
  </div>

  <div class="form-group">
  <label name="website"><input type="text" class="form-control input-lg" value="<%= @listing.url %>" name="url" aria-describedby="sizing-addon1"></label><br>
  </div>

  <div class="form-group">
  <label name="img_url"><input type="text" class="form-control input-lg" value="<%= @listing.img_url %>" name="img_url" aria-describedby="sizing-addon1"></label><br>
  </div>

  <div class="form-group">
  <label name="item_category"><select name="item_category" class="form-control input-lg"><br>
  <option value="<%= @listing.item_category %>"><%= @listing.item_category %></option>
  <option value="Everyone">Everyone</option>
  <option value="Family">Family</option>
  <option value="Adults">Adults</option>
  <option value="Kids">Kids</option>
  <option value="Seniors">Seniors</option>
  </select></label><br>
  </div>

  <div class="form-group">
  <label name="description"><textarea name="description" class="form-control input-lg"><%= @listing.description %></textarea></label><br>
  </div>

  <div class="form-group">
  <label name="submit"><input type="submit" value="Submit" class="btn btn-default"></label>
  </div>

  </form>
  </div>
